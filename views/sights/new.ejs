<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Sight</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/nationalParks/<%= nationalPark._id %>/sights"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="my-3 form-floating">
        <input
          type="text"
          class="form-control"
          id="title"
          name="sight[title]"
          placeholder="Sight"
          required
        />
        <label class="form-label" for="title">Title</label>
      </div>
      <div class="mb-3 input-group">
        <label class="input-group-text" for="image">Upload Image(s)</label>
        <input
          type="file"
          name="image"
          id="image"
          class="form-control"
          multiple
        />
      </div>
      <div class="mb-3 form-floating">
        <input
          type="text"
          class="form-control"
          aria-label="Amount (to the nearest dollar)"
          id="distance"
          name="sight[distance]"
          placeholder="150"
          required
        />
        <label for="distance" class="form-label">Distance</label>
      </div>
      <div class="mb-3 form-floating">
        <textarea
          class="form-control"
          id="description"
          name="sight[description]"
          placeholder="Description"
          style="height: 100px"
          required
        ></textarea>
        <label class="form-label" for="description">Description</label>
      </div>
      <div class="my-3 form-floating">
        <input
          type="text"
          class="form-control"
          id="difficulty"
          name="sight[difficulty]"
          placeholder="Difficulty"
          required
        />
        <label class="form-label" for="difficulty">Difficulty</label>
      </div>
      <div class="my-3 form-floating" hidden>
        <input
          type="text"
          class="form-control"
          id="nationalPark"
          name="sight[nationalPark]"
          placeholder="NationalPark"
          required
          value="<%= nationalPark._id %>"
        />
        <label class="form-label" for="nationalPark">National Park</label>
      </div>
      <div class="mb-3">
        <button class="btn btn-outline-primary">Add Sight</button>
      </div>
    </form>
    <a
      class="btn btn-outline-secondary"
      href="/nationalParks/<%= nationalPark._id %>"
      >Return to <%= nationalPark.title %></a
    >
  </div>
</div>
