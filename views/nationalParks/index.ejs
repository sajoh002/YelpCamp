<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>National Parks</h1>

<% for (let nationalPark of nationalParks) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (nationalPark.images.length) { %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        src="<%= nationalPark.images[0].url %>"
        alt=""
      />
      <% } else { %>
      <img
        class="img-fluid"
        crossorigin="anonymous"
        src="https://res.cloudinary.com/dy4jgwfkr/image/upload/v1711320871/YelpCamp/spkn4uiva5vczxkrb6ae.png"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= nationalPark.title %></h5>
        <p class="card-text"><%= nationalPark.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= nationalPark.state %></small>
        </p>
        <a
          class="btn btn-outline-secondary"
          href="/nationalParks/<%= nationalPark._id %>"
        >
          View <%= nationalPark.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
<script>
  const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
  const nationalParks = {features: <%- JSON.stringify(nationalParks) %>}
</script>
<script src="/javascript/clusterMap.js"></script>
