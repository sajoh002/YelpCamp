<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New National Park</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/nationalParks"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="my-3 form-floating">
        <input
          type="text"
          class="form-control"
          id="title"
          name="nationalPark[title]"
          placeholder="National Park"
          required
        />
        <label class="form-label" for="title">Title</label>
      </div>
      <div class="mb-3 form-floating">
        <select
          class="form-select"
          aria-label="State select"
          id="state"
          name="nationalPark[state]"
        >
          <option selected value="">Select a state...</option>
          <% states.forEach((state, i) => { %>
          <option value="<%= state %>"><%= state %></option>
          <% }) %>
        </select>
        <label for="state">State</label>
      </div>
      <div class="mb-3 input-group">
        <label class="input-group-text" for="image">Upload Image</label>
        <input type="file" name="image" id="image" class="form-control" />
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            id="price"
            name="nationalPark[price]"
            placeholder="150"
            required
          />
          <label for="price" class="form-label">Entrance Fee</label>
        </div>
        <select
          class="form-select"
          aria-label="Price per select"
          id="pricePer"
          name="nationalPark[pricePer]"
        >
          <option selected>Per Vehicle</option>
          <option>Per Person</option>
        </select>
      </div>
      <div class="mb-3 form-floating">
        <textarea
          class="form-control"
          id="description"
          name="nationalPark[description]"
          placeholder="Description"
          style="height: 100px"
          required
        ></textarea>
        <label class="form-label" for="description">Description</label>
      </div>

      <div class="mb-3">
        <button class="btn btn-outline-primary">Add National Park</button>
      </div>
    </form>
    <a class="btn btn-outline-secondary" href="/nationalParks"
      >All National Parks</a
    >
  </div>
</div>
