<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT"
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="my-3 form-floating">
        <input
          type="text"
          class="form-control"
          id="title"
          name="campground[title]"
          placeholder="Campground"
          value="<%= campground.title %>"
          required
        />
        <label class="form-label" for="title">Title</label>
      </div>
      <div class="mb-3 form-floating">
        <input
          type="text"
          class="form-control"
          id="location"
          name="campground[location]"
          placeholder="Location"
          value="<%= campground.location %>"
          required
        />
        <label class="form-label" for="location">Location</label>
      </div>
      <div class="mb-3 input-group">
        <label class="input-group-text" for="image">Add Image(s)</label>
        <input
          type="file"
          name="image"
          id="image"
          class="form-control"
          multiple
        />
      </div>
      <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        <div class="form-floating">
          <input
            type="text"
            class="form-control"
            aria-label="Amount (to the nearest dollar)"
            id="price"
            name="campground[price]"
            placeholder="150"
            value="<%= campground.price %>"
            required
          />
          <label for="price" class="form-label">Price</label>
        </div>
        <span class="input-group-text">.00</span>
      </div>
      <div class="mb-3 form-floating">
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          placeholder="Description"
          style="height: 100px"
          required
        >
          <%= campground.description %>
        </textarea>
        <label class="form-label" for="description">Description</label>
      </div>
      <div class="mb-3">
        <% campground.images.forEach((img, i) => { %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline mb-3">
          <input
            class="form-check-input"
            type="checkbox"
            value="<%= img.filename %>"
            id="image-<%= i %>"
            name="deleteImages[]"
          />
          <label class="form-check-label" for="image-<%= i %>"> Delete? </label>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-outline-primary">Save Campground</button>
      </div>
    </form>
    <a
      class="btn btn-outline-secondary"
      href="/campgrounds/<%= campground._id %>"
      >Back to Campground</a
    >
  </div>
</div>
